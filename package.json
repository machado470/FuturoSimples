{
  "name": "futurosimples",
  "private": true,
  "packageManager": "pnpm@9.10.0",
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev --parallel",
    "lint": "turbo run lint",
    "test": "turbo run test",
    "db:push": "pnpm --filter @futurosimples/api prisma db push",
    "db:studio": "pnpm --filter @futurosimples/api prisma studio"
  },
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "devDependencies": {
    "turbo": "^2.0.4",
    "typescript": "^5.6.3"
  }
}